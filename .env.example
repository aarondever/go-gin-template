# Server Configuration
SERVER_PORT=8080
SERVER_MODE=release                    # Options: debug, release, test
SERVER_READ_TIMEOUT=30                  # Timeout in seconds
SERVER_WRITE_TIMEOUT=30                 # Timeout in seconds

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=postgres
DB_MAX_OPEN_CONNS=25                   # Maximum number of open connections
DB_MAX_IDLE_CONNS=5                    # Maximum number of idle connections
DB_CONN_MAX_LIFETIME=300               # Connection max lifetime in seconds

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=                        # Leave empty if no password
REDIS_DB=0                             # Redis database number

# Logging Configuration
LOG_LEVEL=info                          # Options: debug, info, warn, error
LOG_FORMAT=json                         # Options: text, json
